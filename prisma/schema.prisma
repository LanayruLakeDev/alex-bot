generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Page {
  id          String   @id @default(cuid())
  pageId      String   @unique
  pageName    String
  accessToken String
  isEnabled   Boolean  @default(true)
  aiModel     String   @default("llama") // "llama" or "gemini"
  systemPrompt String  @db.Text
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([pageId])
  @@map("pages")
}

model Order {
  id          String   @id @default(cuid())
  pageId      String
  customerName    String
  phoneNumber String
  city        String
  product     String
  notes       String?  @db.Text
  createdAt   DateTime @default(now())

  @@index([pageId])
  @@index([createdAt])
  @@map("orders")
}
